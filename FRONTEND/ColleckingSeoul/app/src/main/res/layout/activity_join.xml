<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_join"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/joinus" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/join_image_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/joinus_profile_basics" />

            <Button
                android:id="@+id/join_button_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/join_image_profile"
                android:layout_alignParentBottom="true"
                android:background="@drawable/joinus_profile_button_plus" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/join_edittext_id"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:hint="   아이디"
                    android:text="rabbit4292@naver.com"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/join_button_duplication"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:padding="15dp"
                    android:text="이메일 중복확인" />

                <Button
                    android:id="@+id/join_button_requestcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:padding="15dp"
                    android:text="이메일 인증번호 요청" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/join_edittext_checkcode"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:hint="   인증번호"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/join_button_checkcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="인증" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/join_edittext_password"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:hint="   비밀번호"
                    android:inputType="textPassword"
                    android:text="1111qqqqq!"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/join_edittext_repassword"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:hint="   비밀번호 확인"
                    android:inputType="textPassword"
                    android:text="1111qqqqq!"
                    android:textSize="12dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/join_edittext_nikname"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:hint="   닉네임"
                    android:text="rabbit"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/join_edittext_phone"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:hint="핸드폰 번호 (번호만 입력해주세요)"
                    android:text="01000000000"
                    android:textSize="9dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="성별" />

                <RadioGroup
                    android:id="@+id/join_radioGroup_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/여자"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="여자" />

                    <RadioButton
                        android:id="@+id/남자"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="남자" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="생년 월일" />

                <DatePicker
                    android:id="@+id/join_datepicker_birth"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner">

                </DatePicker>
            </LinearLayout>

            <Button
                android:id="@+id/join_button_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/joinus_button_off" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>