<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.sungshin.colleckingseoul.login.FindIdFragment"
    android:background="@drawable/login_background"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/findid_linearLayout_findid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/findid_editText_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:hint="핸드폰 번호 ( - 없이 입력해 주세요) "
            />

        <EditText
            android:id="@+id/findid_editText_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:hint="생년 월일를 입력해 주세요 " />

        <Button
            android:id="@+id/findid_button_find_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/find_button_findid_off"/>

    </LinearLayout>


</RelativeLayout>
