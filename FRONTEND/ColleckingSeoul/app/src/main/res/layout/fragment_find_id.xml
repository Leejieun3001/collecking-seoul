<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.sungshin.colleckingseoul.login.FindIdFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/findid_linearLayout_findid">

        <EditText
            android:id="@+id/findid_editText_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="핸드폰 번호 ( - 없이 입력해 주세요) "
            android:layout_margin="@dimen/small_margin"
            />

        <EditText
            android:id="@+id/findid_editText_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="생년 월일를 입력해 주세요 "
            android:layout_margin="@dimen/small_margin"
            />

        <Button
            android:id="@+id/findid_button_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디찾기"
            />

    </LinearLayout>


</RelativeLayout>
